<UserControl
    x:Class="MailApp.Controls.MoveToMenuItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MailApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:m="using:MailApp.Models"
    xmlns:converters="using:MailApp.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Name="moveToMenuItemRoot">

    <UserControl.Resources>
        <converters:MailFolderIconConverter x:Key="MailFolderIconConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <TextBox Name="searchBox" 
                 PlaceholderText="Search..." 
                 TextChanged="TextBox_TextChanged"/>

        <Rectangle Fill="{ThemeResource AppBarSeparatorForegroundThemeBrush}" Height="1" Margin="0 3"/>

        <StackPanel Name="menuContainer">
            
        </StackPanel>

    </StackPanel>
</UserControl>
